---
const { variant = 'primary', size = 'l', href } = Astro.props;

const Element = href ? 'a' : 'button';
---

<Element class={`${variant === 'primary' ? "bg-purple-200 text-white hover:bg-purple-100 px-[18px]" : variant === 'secondary' ? 'bg-purple-200 bg-opacity-10 text-purple-200 hover:bg-opacity-25 dark:bg-white px-[18px]' : variant === 'destructive' ? 'bg-red-200 text-white hover:bg-red-100 px-[18px]' : variant === 'transparent' && 'bg-transparent'} rounded-3xl w-fit ${size === 'l' ? 'min-h-[48px] py-[15px]' : size === 'sm' ? 'min-h-[40px] py-[15px]' : size === 'xs' && 'py-[10px]'} heading-m flex`}>
  <slot />
</Element>