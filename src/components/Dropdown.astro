---
import Label from "./Label.astro";

const {label, id, name} = Astro.props;
---

<Label id={id}>
  {label}
</Label>

<select class='w-full border-grey-300 border-opacity-25 border border-solid rounded body-l py-2 px-4 invalid:border-red-200' name={name} id={id}>
<option value="todo">To Do</option>
<option value="doing">Doing</option>
<option value="done">Done</option>
</select>